@model MVCSamp_FilmReview.Models.Director

@{
    ViewBag.Title = "Director's Detail";
}

<h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>

<div>
    <h4>Director's Detail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Date of Birth
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateofBirth)
        </dd>

        <dt>
            Directed Films:
        </dt>
        @foreach(var item in Model.DirectorFilms)
        {
            <dd>
                @Html.ActionLink(item.FilmName, "Details", "ClsFilms", new { id = item.FilmId}, null)
            </dd>
        }

    </dl>
</div>

@if (ViewBag.UserId != "")
{
<div class="glyphicon-text-color">
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.DirectorId }) 
</p>
</div>
}

<div class="glyphicon-link">
<p>
    @Html.ActionLink("Back to List of Directors", "Index")
</p>
</div>
