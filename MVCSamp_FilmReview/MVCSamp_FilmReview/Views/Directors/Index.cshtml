@model IEnumerable<MVCSamp_FilmReview.Models.Director>

@{
    ViewBag.Title = "Directors";
}

<h2>Available Directors of Film</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Date of Birth
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateofBirth)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DirectorId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DirectorId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DirectorId })
        </td>
    </tr>
}

</table>
