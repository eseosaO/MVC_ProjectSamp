@model MVCSamp_FilmReview.Models.ClsFilm


@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name of Film
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FilmName)
        </dd>

        <dt>
            GenreName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GenreName)
        </dd>

        <dt>
            Director's Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Director.FirstName)
            @Html.DisplayFor(model => model.Director.LastName)
        </dd>

        <dt>
            ReleaseDate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>



        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>


        <dt>
            AverageScore
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AverageScore)
        </dd>
        @if(ViewBag.UserId == "abc@gmail.com")
        {
            <dd>
                @Html.ActionLink("AddActors", "ActorActors","Film", new { id = Model.FilmId}, null)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Cast)
        </dt>

        <dt>
            @foreach(var item in Model.Cast)
            {
             <dd>
                 @Html.ActionLink(item.FirstName + " " + item.Surname, "Details", "Actors", new { id = item.ActorId}, null)
             </dd>
            }
        </dt>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.FilmId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
