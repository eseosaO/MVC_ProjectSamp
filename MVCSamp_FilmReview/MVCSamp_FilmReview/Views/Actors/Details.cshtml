@model MVCSamp_FilmReview.Models.Actor


@{
    ViewBag.Title = "Actor's Detail";
}

<h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.Surname)</h2>

<div>
    <h4>Actor's Detail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Surname
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            Date of Birth
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateofBirth)
        </dd>

        <dt>
            Films Cast On:
        </dt>

        @foreach (var item in Model.FilmCastOn)
        {
            <dd>
                @Html.ActionLink(item.FilmName, "Details", "ClsFilms", new { id = item.FilmId}, null)
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ActorId }) |
    @Html.ActionLink("List of Actors", "Index")
</p>
